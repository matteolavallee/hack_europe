# --- BACKEND SETTINGS ---
# API Key for Google Gemini (used for the main LLM of the assistant)
GEMINI_API_KEY=your_gemini_api_key

# API Key for OpenAI (used for Whisper Speech-To-Text processing of voice messages)
OPENAI_API_KEY=your_openai_api_key

# API Key and configuration for ElevenLabs (used for Text-To-Speech generation)
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL_ID=eleven_turbo_v2

# API URL and Token for WapiCloud (used for sending and receiving WhatsApp messages)
WAPICLOUD_URL=your_wapicloud_url
WAPICLOUD_TOKEN=your_wapicloud_token

# Allowed Origins for CORS (Comma separated list of URLs allowed to call the backend)
ALLOWED_ORIGINS=http://localhost:3000

# --- FRONTEND SETTINGS ---
# 'false' pour utiliser le vrai backend FastAPI, 'true' pour utiliser des données mockées
NEXT_PUBLIC_USE_MOCK=false

# L'URL racine de votre backend FastAPI (ex: http://localhost:8000)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Token d'authentification pour la communication entre le frontend et l'API
NEXT_PUBLIC_API_TOKEN=demo-token

# Identifiant unique du patient (Care Receiver) pour charger son contexte
NEXT_PUBLIC_CARE_RECEIVER_ID=cr-1234
